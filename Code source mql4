   if(!Chk.Create(m_chart_id, m_name + Name, m_subwin, X1, Y1, X2, Y2))
      return false;
   if(!Add(Chk))
      return false;
   if(!Chk.Text(Text))
      ObjectSetString(ChartID(), m_name + Name + "Label", OBJPROP_TOOLTIP, Tooltip);

   return true;
  }
